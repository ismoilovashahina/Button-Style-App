<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="306dp"
        android:layout_marginEnd="158dp"
        android:background="@drawable/background_resource"
        android:text="Button" />

    <com.google.android.material.button.MaterialButton
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        app:cornerRadius="25dp"
        android:text="Button"
        android:textAllCaps="false"
        app:strokeColor="@color/black"
        app:strokeWidth="5dp"
        android:textSize="25dp"
        android:textColor="#aa3454"
        app:icon="@drawable/ic_baseline_person_24"
        app:iconSize="14sp"
        app:iconTint="@color/black"
        app:iconGravity="start"
        app:iconPadding="15dp"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/my_btn1"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="-400dp"
        android:backgroundTint="#71CD6C"
        app:cornerRadius="5dp"
        android:text="Main Button"
        />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/my_btn2"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginStart="-150dp"
        android:backgroundTint="#71CD6C"
        app:cornerRadius="50dp"
        android:text="Rounded"
        />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/my_btn3"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginStart="-100dp"
        app:cornerRadius="20dp"
        android:text="Outlined icon"
        app:strokeColor="#FB0000"
        app:iconGravity="textStart"
        app:icon="@drawable/ic_baseline_heart_broken_24"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:layout_marginStart="-50dp"
        android:background="@drawable/button_bg"
        android:text="Horizontal Gradient"
        android:textColor="#fff"
        android:textAllCaps="false"
        />








</LinearLayout>

